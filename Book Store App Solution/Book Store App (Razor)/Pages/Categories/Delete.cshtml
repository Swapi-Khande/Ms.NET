@page
@model Book_Store_App__Razor_.Pages.Categories.DeleteModel

<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary-emphasis">Delete Category</h2>
            <hr />
        </div>
        <div class="row mb-3">
            <label asp-for="Category.Name" class="p-0 mb-2 text-primary-emphasis"></label>
            <input asp-for="Category.Name" class="form-control" disabled />
        </div>
        <div class="row mb-3">
            <label asp-for="Category.DisplayOrder" class="p-0 mb-2 text-primary-emphasis">Display Order</label>
            <input asp-for="Category.DisplayOrder" class="form-control" disabled />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/categories/index" class="btn btn btn btn-outline-primary border form-control">Back To List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
} 
